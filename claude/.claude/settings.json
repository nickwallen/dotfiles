{
  "permissions": {
    "allow": [
      "Bash(bzl test:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)"
    ],
    "deny": []
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
